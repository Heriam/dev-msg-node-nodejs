/*
  [] is used to list entries with OR relationships
  {} is used to store key-value entries with AND relationships
*/
{ "id": 0,
  "rules": [
    {
      "target": {
        "domain": {
          "equals": "hjiang-rethink.com"
        },
        "type": {
          "equals": ["create", "update"]
        }
      },
      "if": [
        {
          "weekday": {
            "equals": ["saturday", "sunday"]
          },
          "time": [
            {
              "largerThan": "09:00",
              "lessThan": "12:30"
            },
            {
              "largerThan": "14:00",
              "lessThan": "18:00"
            }
          ]
        },
        {
          "weekday": {
            "not": ["saturday", "sunday"]
          },
          "time": [
            {
              "largerThan": "09:30",
              "lessThan": "12:00"
            },
            {
              "largerThan": "14:30",
              "lessThan": "17:30"
            }
          ]
        }
      ],
      "then": "deny",
      "actions": {
        "copyto": "hao.jiang@imt-atlantic.fr"
      }
    }
  ],
  "combiningAlgorithm": "blockOverrides",   // other options: allowOverrides, firstApplicable
  "conditionalActions":{
    "onDeny": {
      "copyto": "hao.jiang@imt-atlantic.fr"
    },
    "noRule": {
      "copyto": "hao.jiang@imt-atlantic.fr"
    }
  }
}
