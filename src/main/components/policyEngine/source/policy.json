/*
  [] is used to list entries with OR relationships
  {} is used to store key-value entries with AND relationships
*/
{ "id": 0,
  "rules": [
    {
      "target": {
        "allOf": [
          {
            "condition": "domain",
            "equals": "hjiang-rethink.com"
          },
          {
            "condition": "type",
            "in": ["create", "update"]
          }
      ],
      "if": {
        "anyOf": [
          {
            "allOf": [
              {
                "not": {}

                  "condition": "weekday",
                  "in": ["saturday", "sunday"]
              },
              {
                "condition": "time",
                "largerThan": "09:00"
              }
            ]
          }
        ]
      },
      "then": "deny",
      "actions": {
        "copyto": "hao.jiang@imt-atlantic.fr"
      }
    }
  ],
  "combiningAlgorithm": "blockOverrides",   // other options: allowOverrides, firstApplicable
  "conditionalActions":{
    "onDeny": {
      "copyto": "hao.jiang@imt-atlantic.fr"
    },
    "noRule": {
      "copyto": "hao.jiang@imt-atlantic.fr"
    }
  }
}
